using ConsoleApp1;
using static TelCo.ColorCoder.Program;

namespace ConsoleApp2
{
    internal static class PairNumberFromColor
    {
        internal static int GetPairNumberFromColor(ColorPair pair)
        {
            int majorIndex = -1;
            for (int i = 0; i < ColorFromPairNumber.colorMapMajor.Length; i++)
            {
                if (ColorFromPairNumber.colorMapMajor[i] == pair.majorColor)
                {
                    majorIndex = i;
                    break;
                }
            }

            int minorIndex = -1;
            for (int i = 0; i < ColorFromPairNumber.colorMapMinor.Length; i++)
            {
                if (ColorFromPairNumber.colorMapMinor[i] == pair.minorColor)
                {
                    minorIndex = i;
                    break;
                }
            }
            if (majorIndex == -1 || minorIndex == -1)
            {
                throw new ArgumentException(
                    string.Format("Unknown Colors: {0}", pair.ToString()));
            } 

            return (majorIndex * ColorFromPairNumber.colorMapMinor.Length) + (minorIndex + 1);
        }
    }
}
